<%= form_with(model: [:admin, offer], local: true) do |form| %>
  <% if offer.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(offer.errors.count, "error") %> prohibited this offer from being saved:
      </h2>

      <ul>
        <% offer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :advertiser_name %>
    <%= form.text_field :advertiser_name, id: :offer_advertise_name %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.url_field :url, id: :offer_url %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :offer_description %>
  </div>

  <div class="field">
    <%= form.label :starts_at %>
    <%= form.datetime_select :starts_at, id: :offer_starts_at %>
  </div>

  <div class="field">
    <%= form.label :ends_at %>
    <%= form.datetime_select :ends_at, id: :offer_ends_at %>
  </div>

  <div class="field">
    <%= form.label :premium %>
    <%= form.check_box :premium, id: :offer_premium %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
