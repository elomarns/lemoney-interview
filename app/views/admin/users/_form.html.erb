<%= form_with(model: [:admin, user], local: true) do |form| %>
  <div class="row">
    <div class="col s12 input-field">
      <%= form.label :name, class: :active %>
      <%= form.text_field :name, id: :user_name %>
      <%= validation_error_message_for @user, :name %>
    </div>

    <div class="col s12 input-field">
      <%= form.label :email, class: :active %>
      <%= form.email_field :email, id: :user_email %>
      <%= validation_error_message_for @user, :email %>
    </div>

    <div class="col s12 input-field">
      <%= form.label :password, class: :active %>
      <%= form.password_field :password, id: :user_password %>
      <%= validation_error_message_for @user, :password %>
    </div>
  </div>

  <br>

  <div class="actions">
    <%= form.submit "Save", class: "btn waves-effect waves-light" %>
  </div>
<% end %>
